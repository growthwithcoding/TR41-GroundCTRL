{
  "name": "groundctrl-backend",
  "version": "1.2.0",
  "description": "GroundCTRL - Mission Control Platform for Satellite Simulation",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "cleanup": "node src/scripts/FB_cleanup.js",
    "emulators:start": "firebase emulators:start --only auth,firestore",
    "test:local": "firebase emulators:exec --only auth,firestore \"npm test\""
  },
  "keywords": [
    "satellite",
    "mission-control",
    "api",
    "express"
  ],
  "author": "TR41 Backend Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.7.9",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "firebase-admin": "^13.0.2",
    "helmet": "^8.1.0",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.0.4",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/jest": "^29.5.14",
    "eslint": "^9.39.2",
    "firebase-tools": "^15.3.1",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.9"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "overrides": {
    "glob": "^10.0.0",
    "z-schema": {
      ".": "^6.0.0",
      "lodash.get": "npm:lodash@^4.17.21",
      "lodash.isequal": "npm:lodash@^4.17.21"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests-backend/setup.js"
    ],
    "testMatch": [
      "**/tests-backend/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js"
    ]
  }
}
