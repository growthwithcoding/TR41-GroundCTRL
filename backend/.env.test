# ============================================
# Firebase Emulator Configuration (TESTING ONLY)
# ============================================
# These tell the Node.js Firebase SDK to connect to local emulators
# instead of production Firebase

FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
FIRESTORE_EMULATOR_HOST=localhost:8080

# ============================================
# Firebase Project Configuration
# ============================================
# For testing, we use a test project ID

FIREBASE_PROJECT_ID=test-project
FIREBASE_WEB_API_KEY=test-api-key-12345

# ============================================
# Backend API Configuration
# ============================================
# Tests make HTTP requests to this endpoint

API_BASE_URL=http://localhost:8080/api/v1
PORT=8080

# ============================================
# Environment
# ============================================

NODE_ENV=test

# ============================================
# HTTP Client Configuration
# ============================================

HTTP_CLIENT_TIMEOUT_MS=8000

# ============================================
# JWT Configuration (Testing)
# ============================================

JWT_SECRET=test-jwt-secret-change-in-production
JWT_REFRESH_SECRET=test-refresh-secret-change-in-production
JWT_EXPIRY=1h
JWT_REFRESH_EXPIRY=7d

# ============================================
# Logging
# ============================================

LOG_LEVEL=debug

# ============================================
# Account Lockout Configuration
# ============================================

LOGIN_ATTEMPT_LIMIT=5
LOCKOUT_DURATION_MINUTES=15

# ============================================
# API Rate Limiting (CRITICAL FOR SPRINT 0)
# ============================================
# Global API rate limit: 100 requests per 15 minutes

API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# Login Rate Limiting (CRITICAL FOR SPRINT 0)
# ============================================
# Login-specific rate limit: 5 attempts per 15 minutes

LOGIN_RATE_LIMIT_WINDOW_MS=900000
LOGIN_RATE_LIMIT_MAX_REQUESTS=5

# ============================================
# Security Headers (Testing)
# ============================================

CORS_ORIGIN=http://localhost:5173

# ============================================
# Debug Mode
# ============================================

DEBUG=false
