rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users collection - users can read/write their own data
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId) || isAdmin();
    }

    // Satellites collection - authenticated users can read, only owners can write
    match /satellites/{satelliteId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && 
                              (resource.data.userId == request.auth.uid || isAdmin());
    }

    // Scenarios collection - authenticated users can read, only owners can write
    match /scenarios/{scenarioId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && 
                              (resource.data.userId == request.auth.uid || isAdmin());
    }

    // Scenario Steps collection - authenticated users can read, only owners can write
    match /scenarioSteps/{stepId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && 
                              (resource.data.userId == request.auth.uid || isAdmin());
    }

    // Audit logs - only admins can read/write
    match /auditLogs/{logId} {
      allow read, write: if isAdmin();
    }

    // Token blacklist - only system/admin can access
    match /tokenBlacklist/{tokenId} {
      allow read, write: if isAdmin();
    }

    // Default deny all for any other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
